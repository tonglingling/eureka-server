#!groovy
pipeline {

    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing'
            }
        }

        stage('Push'){
            steps{
                echo 'Push images...'
                sh '/buildImg.sh eureka-server'
            }
        }

    }
}